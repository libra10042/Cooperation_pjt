<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GuestDAO">
  
  <insert id="insertGuest" parameterType="Guest">
  		insert into Guest
  		(
  			userid
  			,userpw
  			,username
  		)
  		values
  		(
  			#{userid}
  			,#{userpw}
  			,#{username}
  		)
  </insert>
  
  <select id="selectGuest" parameterType="Guest" resultType="Guest">
 	select
 		userid 
 		,username
 		,userpwd
  	from
  		Guest
  	where
  		userid=#{userid}
  		and
  		userpwd=#{userpwd}
  
  </select>
  
  
  <delete id="deleteGuest" parameterType="String">
 	 delete 
  		Guest
  	where
  		id=#{id}
  
  </delete>  
  
  
  <select id="checkId" parameterType="String" resultType="int">
  	select count(*) from Guest where user_id = #{user_id}
  
  </select>
  
  
  
  </mapper>  